<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".statistics">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Statistics"
        android:textSize="28sp"
        android:textColor="#000"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="horizontal">


    <TextView
        android:layout_width="50dp"

        android:layout_height="wrap_content"
        android:id="@+id/DailyText"
        android:textSize="20sp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textSize="20sp"

            android:text="Times scanned successfully Today"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="80dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="horizontal">


        <TextView
            android:layout_width="50dp"

            android:layout_height="wrap_content"
            android:id="@+id/WeeklyText"
            android:textSize="20sp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textSize="18sp"

            android:text="Times scanned successfully this Week"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="80dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="horizontal">


        <TextView
            android:layout_width="50dp"

            android:layout_height="wrap_content"
            android:id="@+id/MonthlyText"
            android:textSize="20sp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textSize="18sp"

            android:text="Times scanned successfully this Month"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="80dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="horizontal">


        <TextView
            android:layout_width="50dp"

            android:layout_height="wrap_content"
            android:id="@+id/AllTimeText"
            android:textSize="20sp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textSize="20sp"

            android:text="Times scanned successfully AllTime"/>
    </LinearLayout>

</LinearLayout>